<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iguest.hermes.AddRequestFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Restaurant Name"
        android:id="@+id/textView"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"></Spinner>

    <TextView
        android:id="@+id/ReqDescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:layout_below="@id/spinner"/>


    <EditText
        android:id="@+id/reqDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="What food do you want?"
        android:layout_below="@id/ReqDescriptionTitle"/>

</RelativeLayout>
